{
  "family": "eto-subgraph",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::905418078110:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::905418078110:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "graph-node",
      "image": "graphprotocol/graph-node:v0.34.1",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp",
          "name": "graphql"
        },
        {
          "containerPort": 8020,
          "protocol": "tcp",
          "name": "admin"
        },
        {
          "containerPort": 8030,
          "protocol": "tcp",
          "name": "index-status"
        }
      ],
      "environment": [
        {
          "name": "postgres_host",
          "value": "eto-subgraph-postgres.cszsuoaycxb2.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "postgres_user",
          "value": "graphnode"
        },
        {
          "name": "postgres_db",
          "value": "graphnode"
        },
        {
          "name": "ipfs",
          "value": "localhost:5001"
        },
        {
          "name": "ethereum",
          "value": "eto-l1:https://eto.ash.center/rpc"
        },
        {
          "name": "GRAPH_LOG",
          "value": "info"
        },
        {
          "name": "ETHEREUM_REORG_THRESHOLD",
          "value": "1"
        },
        {
          "name": "ETHEREUM_ANCESTOR_COUNT",
          "value": "1"
        },
        {
          "name": "GRAPH_ETHEREUM_BLOCK_BATCH_SIZE",
          "value": "100"
        },
        {
          "name": "GRAPH_ETHEREUM_MAX_BLOCK_RANGE_SIZE",
          "value": "1000"
        }
      ],
      "secrets": [
        {
          "name": "postgres_pass",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:905418078110:secret:eto-subgraph/postgres-password-s0Cp5G"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/eto-subgraph",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "graph-node"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8030 || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      },
      "dependsOn": [
        {
          "containerName": "ipfs",
          "condition": "START"
        }
      ]
    },
    {
      "name": "ipfs",
      "image": "ipfs/kubo:v0.22.0",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5001,
          "protocol": "tcp",
          "name": "ipfs-api"
        }
      ],
      "environment": [
        {
          "name": "IPFS_PROFILE",
          "value": "server"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/eto-subgraph",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ipfs"
        }
      }
    },
    {
      "name": "nginx",
      "image": "nginx:alpine",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp",
          "name": "http"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/eto-subgraph",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "nginx"
        }
      },
      "dependsOn": [
        {
          "containerName": "graph-node",
          "condition": "HEALTHY"
        }
      ]
    }
  ]
}
